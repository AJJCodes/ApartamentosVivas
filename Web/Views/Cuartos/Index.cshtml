@* Estilo del error *@
<style>
    form .error {
        color: red;
    }

    input.error {
        border-color: red;
    }
</style>


<div id="DivTablaCuartos" class="p-4 container shadow-lg">

    <h2 class="p-4">Tabla de Cuartos</h2>

    <table id="TablaDeCuartos" class="table-responsive table align-middle mb-0 bg-white w-100 table table-striped table-hover table-bordered rounded-2">
        <thead class="bg-light">
            <tr>
                <th>Descripción Cuarto</th>
                <th>Codigo</th>
                <th>Disponible</th>
                <th>En Mantenimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>




<div id="DivAgregarCuarto" style="display:none" class="container shadow-lg p-4">
    <form class="row" id="AgregarCuarto">

        <p class="text-start my-3 fw-bold fs-4">Datos Cuarto</p>

        <div class="col-lg-12">
            <label for="NombreRol" class="form-label">Usuario:</label>
            <input type="text" class="form-control" id="NombreRol" name="NombreRol" remote="@Url.Action("ValidarCedula", "Roles")">
            <div class="invalid-feedback"></div>
        </div>
    </form>
</div>

