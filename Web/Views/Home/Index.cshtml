    <h3>Versión del Sistema: 0.1</h3>
    <h3 id="hora-fecha">Hora y Fecha: </h3>

    <script>function mostrarHora() {
            // Obtener la hora y fecha actual
            var fecha = new Date();
            var hora = fecha.getHours();
            var minutos = fecha.getMinutes();
            var segundos = fecha.getSeconds();
            var dia = fecha.getDate();
            var mes = fecha.getMonth() + 1;
            var año = fecha.getFullYear();

            // Ajustar el formato de los minutos y segundos si son menores a 10
            if (minutos < 10) {
                minutos = "0" + minutos;
            }
            if (segundos < 10) {
                segundos = "0" + segundos;
            }

            // Mostrar la hora y fecha en el formato deseado
            var horaFecha = "Hora: " + hora + ":" + minutos + ":" + segundos + " - Fecha: " + dia + "/" + mes + "/" + año;

            // Mostrar la hora y fecha en la página
            document.getElementById("hora-fecha").innerHTML = horaFecha;
        }

        // Actualizar la hora cada segundo
        setInterval(mostrarHora, 1000);</script>
</body>

